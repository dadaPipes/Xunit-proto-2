{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../v3/v3-2.0.0/src/xunit.v3.assert",
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        },
        {
          "src": "../v3/v3-2.0.0/src/xunit.v3.common",
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        },
        {
          "src": "../v3/v3-2.0.0/src/xunit.v3.core",
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        },
        {
          "src": "../v3/v3-2.0.0/src/xunit.v3.runner.common",
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        },
        {
          "src": "../v3/v3-2.0.0/src/xunit.v3.runner.utility",
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "v3/2.0.0"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "xunit",
      "_appTitle": "xunit",
      "_enableSearch": true,
      "pdf": false
    }
  }
}